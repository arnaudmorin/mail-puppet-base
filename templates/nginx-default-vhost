#
# Default server configuration
#
server {
    server_name mailops.fr;
    listen 80;
    return 301 https://$host$request_uri;
}

server {
    server_name mailops.fr;
    listen 443 ssl;
    access_log /var/log/nginx/mailops.fr_access.log;
    error_log /var/log/nginx/mailops.fr_error.log;
    index index.html;

    root /var/www/html;

    ssl_certificate /etc/letsencrypt/live/mailops.fr/cert.pem;
    ssl_certificate_key /etc/letsencrypt/live/mailops.fr/privkey.pem;
    ssl_protocols       TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers         HIGH:!aNULL:!MD5;

    location ~ /.well-known {
      allow all;
      location ~ /.well-known/acme-challenge/(.*) {
        add_header Content-Type application/jose+json;
      }
    }

    location / {
        try_files $uri $uri/ =404 /index.html;
    }
}
